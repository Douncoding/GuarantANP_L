<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="16dp" android:paddingEnd="16dp"
    android:paddingBottom="10dp" android:paddingTop="10dp">

    <ImageView
        android:id="@+id/user_face"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_line_account_black_24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/user_face"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blackPrimary"
            android:textSize="18sp"
            android:text="김소연"/>

        <TextView
            android:id="@+id/user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="gksrudnf@gmail.com"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/user_phone"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:padding="10dp"
        android:src="@drawable/ic_phone_black_24dp"/>

</RelativeLayout>